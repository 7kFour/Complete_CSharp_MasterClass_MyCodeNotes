<Window x:Class="WPF_App_12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App_12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--tooltips can be added to many elements-->
    <StackPanel>
        <Button ToolTip="I'm a tooltip, super useful my dude" Width="150" Height="100">Hover for more info!</Button>
        <TextBlock ToolTip="Please enter your age below" Width="150" Height="100">Age</TextBlock>
    </StackPanel>
</Window>
